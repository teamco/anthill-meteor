{
  "name": "meteor-app",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn run routes:watch & meteor run",
    "precommit": "lint-staged",
    "routes:generate": "tsr generate",
    "routes:watch": "tsr watch",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "libs:update": "yarn upgrade-interactive",
    "audit": "yarn audit",
    "version:update": "yarn set version stable"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@babel/runtime": "^7.27.6",
    "@casl/ability": "^6.7.3",
    "@casl/react": "^5.0.0",
    "@dr.pogodin/react-helmet": "^3.0.2",
    "@tanstack/react-router": "^1.121.34",
    "@tanstack/router-cli": "^1.121.34",
    "antd": "^5.26.2",
    "bcrypt": "^6.0.0",
    "gravatar": "^1.8.2",
    "lodash": "^4.17.21",
    "meteor-node-stubs": "1.2.19",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "^19.1.0",
    "react-intl": "^7.1.11",
    "speakeasy": "^2.0.0",
    "uglify-js": "^3.19.3",
    "zxcvbn": "^4.4.2"
  },
  "lint-staged": {
    "*.{json,mdx}": "npx prettier --write",
    "*.less": [
      "yarn prettier --write",
      "stylelint -f --fix --color --validate verbose"
    ],
    "*.{js,ts,jsx,tsx}": [
      "yarn prettier --write",
      "eslint --fix"
    ]
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.ts"
    },
    "testModule": "tests/main.js"
  },
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": "^20.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@tsconfig/recommended": "^1.0.10",
    "@types/gravatar": "^1.8.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.18",
    "@types/meteor": "^2.9.9",
    "@types/react-dom": "^19.1.6",
    "@types/zxcvbn": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.2.3",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.5.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "dotenv": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "stylelint": "^16.21.0",
    "stylelint-config-standard-less": "^3.0.1",
    "stylelint-less": "^3.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3"
  }
}
